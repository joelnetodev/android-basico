<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="layoutCorpo">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="txtTitulo">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
    </style>

    <style name="txtCorpo">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_gravity">bottom|fill_horizontal</item>
    </style>

    <style name="txtFim">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtItem">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">bottom|fill_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="txtItemDesc">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">bottom|fill_horizontal</item>
    </style>

    <style name="txtRef">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_gravity">bottom|fill_horizontal</item>
    </style>

    <style name="imgCorpo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="imgSobre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>
